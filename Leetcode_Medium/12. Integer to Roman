
class Solution {
public:
    string intToRoman(int num) {
        
        string ans="";
        while(num!=0){
            if(num>=1000){
                num-=1000;
                ans+="M";
            }
            else if(num>=500){
               if(num>=900){
                   num-=900;
                   ans+="CM";
               }
               else{
                   num-=500;
                   ans+="D";
               }
            }
            else if(num>=100){
                if(num>=400) {
                    num-=400;
                    ans+="CD";
                }
                else{
                    num-=100;
                    ans+="C";
                }
            }
            else if(num>=50){
                if(num>=90){
                    num-=90;
                    ans+="XC";
                }else{
                    num-=50;
                    ans+="L";
                }
            }
            else if(num>=10){
                if(num>=40){
                    num-=40;
                    ans+="XL";
                }
                else {
                    num-=10;
                    ans+="X";
                }
            }
            else if(num>=5){
                if(num>=9){
                    num-=9;
                    ans+="IX";
                }
                else {
                    num-=5;
                    ans+="V";
                }
            }
            else if(num>=1){
                if(num==4){
                    num-=4;
                    ans+="IV";
                }else{
                    num-=1;
                    ans+="I";
                }
            }
        }
        
        return ans;
    }
};
